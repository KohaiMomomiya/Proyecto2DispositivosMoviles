<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EstiloBotonesPantallaPrincipal">
        <item name="android:background">@drawable/boton_menu_principal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="EstiloTextoCuentos">
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">@dimen/tama√±o_texto_parrafo_cuentos</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextoAcercaDe_Cuerpo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextoAcercaDe_Cuerpo_Listado" parent="TextoAcercaDe_Cuerpo">
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TextoAcercaDe_Cuerpo_Negrita" parent="TextoAcercaDe_Cuerpo">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextoAcercaDe_Titulo" parent="TextoAcercaDe_Cuerpo_Negrita">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">30sp</item>
    </style>

</resources>
